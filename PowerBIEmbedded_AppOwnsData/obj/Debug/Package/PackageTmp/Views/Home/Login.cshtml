<!DOCTYPE html>
<html lang="en">
<head>
    <title>Statslab BI Portal  | Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/assets/LoginDesign/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/LoginDesign/css/main.css">
    <link rel="stylesheet" href="~/Content/assets/css/style.min.css" id="stylesheet">
    <link rel="stylesheet" href="~/Content/assets/fonts/open-sans/style.min.css"> <!-- common font  styles  -->
    <link rel="stylesheet" href="~/Content/assets/fonts/universe-admin/style.css"> <!-- universeadmin icon font styles -->
    <link rel="stylesheet" href="~/Content/assets/fonts/mdi/css/materialdesignicons.min.css"> <!-- meterialdesignicons -->
    <link rel="stylesheet" href="~/Content/assets/fonts/iconfont/style.css"> <!-- DEPRECATED iconmonstr -->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    @Html.Raw(ViewBag.Message)
                }
                @using (Html.BeginForm("LoginConfirm", "Home", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    <span class="login100-form-title p-b-55">
                        Login
                    </span>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="email" name="userid" placeholder="Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <span class="lnr lnr-envelope"></span>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                        <input class="input100" type="password" name="password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <span class="lnr lnr-lock"></span>
                        </span>
                    </div>

                    <div class="contact100-form-checkbox m-l-4">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div class="container-login100-form-btn p-t-25">
                        <button class="login100-form-btn" id="submit_login">
                            Login
                        </button>
                    </div>

                    <div class="text-center w-full p-t-42 p-b-22">
                        <a class="txt1 bo1 hov1" href="@Url.Action("ResetPassword", "Home", new { Test = "#" })">Forgot Password?</a>
                    </div>

                    @*<a href="#" class="btn-face m-b-10">
                            <i class="fa fa-facebook-official"></i>
                            Facebook
                        </a>

                        <a href="#" class="btn-google m-b-10">
                            <img src="~/Content/assets/LoginDesign/images/icons/icon-google.png" alt="GOOGLE">
                            Google
                        </a>*@

                    <div class="text-center w-full p-t-115">
                        <span class="txt1">
                            Not a member?
                        </span>

                        <a class="txt1 bo1 hov1" href="@Url.Action("Signup", "Home")">
                            Sign up now
                        </a>
                    </div>
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl">
                }
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/assets/LoginDesign/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/LoginDesign/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/assets/LoginDesign/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/LoginDesign/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/assets/LoginDesign/js/main.js"></script>


    <script>
    $(document).ready(function ()
    {
        $("#submit_login").click(function ()
        {
            $("#submit_login").addClass("btn btn-danger btn-lg is-loading");
        });

    });

    </script>

</body>
</html>